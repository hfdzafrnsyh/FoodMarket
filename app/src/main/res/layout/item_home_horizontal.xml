<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="210dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="24dp"
    android:background="@drawable/shape_rectangle_color_fff"
    >

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:src="@drawable/image_sample_product"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:text="@string/cherry_healthy"
        style="@style/TextView.PoppinsNormal16sp020202"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbFood"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_marginTop="6dp"
            android:layout_marginStart="12dp"
            android:theme="@style/RatingBar"
            android:layout_marginBottom="12dp"
            />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="6dp"
            style="@style/TextView.PoppinsNormal14sp8D92A3"
            />
    </LinearLayout>

</LinearLayout>