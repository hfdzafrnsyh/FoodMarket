<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="24dp"
    android:paddingLeft="24dp"
    android:paddingTop="26dp"
    android:paddingRight="24dp"
    tools:context=".ui.ui.profile.account.editprofile.EditProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginTop="10dp"
            style="@style/TextView.PoppinsNormal16sp020202"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:padding="10dp"
            android:id="@+id/edtName"
            android:textColor="@color/text_color"
            style="@style/EditText.PoppinsNormal14sp020202"
            android:background="@drawable/shape_rectangel_edit_text"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone"
            style="@style/TextView.PoppinsNormal16sp020202"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:padding="10dp"
            android:id="@+id/edtPhone"
            android:textColor="@color/text_color"
            style="@style/EditText.PoppinsNormal14sp020202"
            android:background="@drawable/shape_rectangel_edit_text"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Home"
            style="@style/TextView.PoppinsNormal16sp020202"
            />

        <EditText
            android:id="@+id/edtNoHome"
            style="@style/EditText.PoppinsNormal14sp020202"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No Home"
            android:textColor="@color/text_color"
            android:padding="10dp"
            android:background="@drawable/shape_rectangel_edit_text"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City"
            style="@style/TextView.PoppinsNormal16sp020202"
            />

        <EditText
            android:id="@+id/edtCity"
            style="@style/EditText.PoppinsNormal14sp020202"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:padding="10dp"
            android:textColor="@color/text_color"
            android:background="@drawable/shape_rectangel_edit_text"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            style="@style/TextView.PoppinsNormal16sp020202"
            />


        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="match_parent"
            style="@style/EditText.PoppinsNormal14sp020202"
            android:layout_height="100dp"
            android:hint="Address"
            android:padding="10dp"
            android:textColor="@color/text_color"
            android:background="@drawable/shape_rectangel_edit_text"
            android:inputType="textNoSuggestions"
            android:gravity="top"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnUpdateProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Update"
            style="@style/Button.Primary"
            android:layout_marginTop="24dp"
            ></androidx.appcompat.widget.AppCompatButton>



    </LinearLayout>



</LinearLayout>